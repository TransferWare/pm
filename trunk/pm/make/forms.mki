# ---------------------------------------------------------------------------- #
# Libraries
# ---------------------------------------------------------------------------- #

FORMS_LIBS = \
	gskgen.plx \
	OFG4HPL.plx \
	$(ENDOFLIST)

# ---------------------------------------------------------------------------- #
# Reference forms
# ---------------------------------------------------------------------------- #

REF_FORMS = \
	gskref.fmb \
	$(ENDOFLIST)

# ---------------------------------------------------------------------------- #
# Icons
# ---------------------------------------------------------------------------- #

ICONS = \
	abort.ico \
	afclrall.ico \
	afclrrw.ico \
	afdelrw.ico \
	afedit.ico \
	affind.ico \
	afflddwn.ico \
	affldlft.ico \
	affldrt.ico \
	affldup.ico \
	afhelp.ico \
	afinsrw.ico \
	aflist.ico \
	afprint.ico \
	afquery.ico \
	afsave.ico \
	entqry.ico \
	keys.ico \
	$(ENDOFLIST)

# ---------------------------------------------------------------------------- #
# Forms. Case sensitive!
# ---------------------------------------------------------------------------- #

FORMS = \
	pm_about.fmx \
	pm_start.fmx \
	$(ENDOFLIST)

pm_start.fmb: pm_start.fmt
	$(FMBGENCMD)

pm_start.fmt: pm_start-$(subst .,,$(VER_DEVELOPER)).fmt
	$(CP) $(subst /,$(PATHSEP),$?) $@

# $? might be report/pm_start-50.fmt hence use the OS PATHSEP to convert to 
# report\...

pm_start-60.fmt: pm_start-50.fmt
	$(CP) $(subst /,$(PATHSEP),$?) $@

# Remove pm_start-60.fmt

.INTERMEDIATE: pm_start-60.fmt

# ---------------------------------------------------------------------------- #
# Menus. Case sensitive!
# ---------------------------------------------------------------------------- #

MENUS = \
	pm_mnu.mmx \
	$(ENDOFLIST)

# ---------------------------------------------------------------------------- #
# Dependencies
# ---------------------------------------------------------------------------- #

DEPEND_FORMS ?= \
	$(FORMS_LIBS:.plx=.pld) \
	$(REF_FORMS:.fmb=.fmt) \
	$(FORMS:.fmx=.fmt) \
	$(MENUS:.mmx=.mmt) \
	$(ENDOFLIST)

depend.forms: makedepend_oracle.pl $(DEPEND_FORMS)
	$(depend-forms)		

include $(CFGDIR)/depend.forms.mki

# ---------------------------------------------------------------------------- #
# End of dependencies
